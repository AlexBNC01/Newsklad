# Production settings for Timeweb Cloud Apps
NODE_ENV=production
PORT=3000

# Database - will be replaced with real DATABASE_URL
DATABASE_URL=postgresql://user:password@host:5432/database
DB_SSL=true

# JWT Secrets - CHANGE THESE IN PRODUCTION!
JWT_SECRET=production-secret-key-change-this-to-long-random-string
JWT_REFRESH_SECRET=production-refresh-secret-change-this-to-long-random-string
JWT_EXPIRE_TIME=15m
JWT_REFRESH_EXPIRE_TIME=7d

# Security
BCRYPT_ROUNDS=12

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info

# Health checks
ENABLE_HEALTH_CHECK=true